{
  "name": "@growio/umbrella",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev": "concurrently npm:dev:api npm:dev:marketplace npm:dev:customer",
    "dev:api": "mix phx.server",
    "dev:marketplace": "npm run dev -w @growio/marketplace",
    "dev:customer": "npm run dev -w @growio/customer",
    "lint": "concurrently npm:lint:marketplace npm:lint:customer npm:lint:shared",
    "lint:fix": "concurrently npm:lint:marketplace:fix npm:lint:customer:fix npm:lint:shared:fix",
    "lint:marketplace": "concurrently 'npm run lint -w @growio/marketplace' 'npm run vue-tsc -w @growio/marketplace'",
    "lint:marketplace:fix": "concurrently 'npm run lint:fix -w @growio/marketplace'",
    "lint:customer": "concurrently 'npm run lint -w @growio/customer' 'npm run vue-tsc -w @growio/customer'",
    "lint:customer:fix": "concurrently 'npm run lint:fix -w @growio/customer'",
    "lint:shared": "concurrently 'npm run lint -w @growio/shared' 'npm run vue-tsc -w @growio/shared'",
    "lint:shared:fix": "concurrently 'npm run lint:fix -w @growio/customer'"
  },
  "dependencies": {
    "@floating-ui/vue": "1.0.6",
    "@tanstack/vue-table": "8.16.0",
    "@vueuse/core": "10.9.0",
    "axios": "1.6.8",
    "jsonpath-plus": "8.1.0",
    "modern-normalize": "2.0.0",
    "remeda": "1.61.0",
    "swiper": "11.1.1",
    "vue": "3.4.25",
    "vue-router": "4.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@typescript-eslint/eslint-plugin": "7.1.1",
    "@typescript-eslint/parser": "7.7.1",
    "@vitejs/plugin-vue": "5.0.4",
    "browserslist": "4.23.0",
    "concurrently": "8.2.2",
    "eslint": "8.57.0",
    "eslint-plugin-vue": "9.25.0",
    "husky": "9.0.11",
    "lightningcss": "1.24.1",
    "lint-staged": "15.2.2",
    "postcss-html": "1.6.0",
    "prettier": "3.2.5",
    "stylelint": "16.4.0",
    "stylelint-config-recommended-vue": "1.5.0",
    "typescript": "5.4.5",
    "vite": "5.2.10",
    "vue-tsc": "2.0.14"
  },
  "workspaces": [
    "frontend/marketplace",
    "frontend/customer",
    "frontend/shared"
  ]
}
